<h1>Create an album!</h1>

<form action="<% albums_url %>" method="POST">
    <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token%>>
    <label>Album Name:
        <input type="text" name="album[name]" value="">
    </label>
    <br>
    <label for="band">
        <select name="album[band_id]" id="band">
            <% Band.all.each do |band|%>
                <option> 
                <%= "selected" if album.band_id == band.id %>
                value="<%=band.name%>">
                </option>
            <% end %>
        </select>     
    </label>
    <br>
    
    <input type="radio" id="live" name="album[live]" value="true" checked="checked">
    <label for="live">True</label>
    <input type="radio" id="live" name="album[live]" value="false">
    <label for="studio">False</label>
    <br>
    <label>Album Year:
        <input type="text" name="album[year]" value="">
    </label>
    <br>
    <input type="submit" value="Create your Album!">
</form>